#!/bin/bash

# Userscript Pre-Commit Hook
# Runs formatting and type checking for the userscript app

set -e

# Trap SIGINT (Ctrl+C) to exit cleanly
trap 'echo -e "\n\033[0;31m‚úó Commit cancelled by user\033[0m"; exit 130' INT

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the app directory and repo root
APP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Store originally staged files from repo root
cd "$REPO_ROOT"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '^userscript/' || true)
if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No userscript files staged${NC}"
    exit 0
fi

# Now move to app directory for running the tools
cd "$APP_DIR"

echo -e "${BLUE}üîß Running userscript pre-commit checks...${NC}"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  node_modules not found. Running npm install...${NC}"
    npm install
fi

# Run Prettier formatting to apply all formatting fixes
echo -e "${BLUE}‚Üí Applying Prettier formatting fixes...${NC}"
npm run format
echo -e "${GREEN}‚úì Formatting fixes applied${NC}"

# Run svelte-check for type checking
echo -e "${BLUE}‚Üí Running svelte-check for type validation...${NC}"
if npm run check; then
    echo -e "${GREEN}‚úì Type checking passed${NC}"
else
    echo -e "${RED}‚úó Type checking failed${NC}"
    echo -e "${YELLOW}Type errors cannot be auto-fixed. Please fix them manually.${NC}"
    exit 1
fi

# Verify formatting was applied correctly
echo -e "${BLUE}‚Üí Verifying formatting...${NC}"
if npx prettier --check .; then
    echo -e "${GREEN}‚úì All files properly formatted${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Some files may still have formatting issues${NC}"
fi

# Re-stage only the files that were originally staged (from repo root)
if [ -n "$STAGED_FILES" ]; then
    cd "$REPO_ROOT"
    echo "$STAGED_FILES" | xargs -r git add
fi

echo -e "${GREEN}‚úÖ Userscript pre-commit checks completed successfully${NC}"