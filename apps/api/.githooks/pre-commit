#!/bin/bash

# API Pre-Commit Hook
# Runs linting and formatting for the API Elysia.js/Bun app

set -e

# Trap SIGINT (Ctrl+C) to exit cleanly
trap 'echo -e "\n\033[0;31m‚úó Commit cancelled by user\033[0m"; exit 130' INT

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the app directory and repo root
APP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Store originally staged files from repo root
cd "$REPO_ROOT"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '^apps/api/' || true)
if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No API files staged${NC}"
    exit 0
fi

# Now move to app directory for running the tools
cd "$APP_DIR"

echo -e "${BLUE}üîß Running API pre-commit checks...${NC}"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  node_modules not found. Running bun install...${NC}"
    bun install
fi

# Run Biome with auto-fix for all safe fixes (lint and format)
echo -e "${BLUE}‚Üí Running Biome with auto-fix for linting and formatting...${NC}"

# Apply all safe fixes with Biome
if bun run biome check --write .; then
    echo -e "${GREEN}‚úì All Biome fixes applied${NC}"
else
    # If there are unfixable issues, show them
    echo -e "${YELLOW}‚ö†Ô∏è  Biome found issues that couldn't be auto-fixed${NC}"
    bun run biome check . || true
fi

# Run format to ensure all formatting is applied
echo -e "${BLUE}‚Üí Ensuring all formatting is applied...${NC}"
bun run format

# Final validation
echo -e "${BLUE}‚Üí Final validation...${NC}"
if bun run biome check .; then
    echo -e "${GREEN}‚úì All checks passed${NC}"
else
    echo -e "${RED}‚úó There are still issues that couldn't be auto-fixed${NC}"
    exit 1
fi

# Re-stage only the files that were originally staged (from repo root)
if [ -n "$STAGED_FILES" ]; then
    cd "$REPO_ROOT"
    echo "$STAGED_FILES" | xargs -r git add
fi

echo -e "${GREEN}‚úÖ API pre-commit checks completed successfully${NC}"