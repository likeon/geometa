#!/bin/bash

# Frontend Pre-Commit Hook
# Runs linting and formatting for the frontend SvelteKit app

set -e

# Trap SIGINT (Ctrl+C) to exit cleanly
trap 'echo -e "\n\033[0;31m‚úó Commit cancelled by user\033[0m"; exit 130' INT

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the app directory and repo root
APP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Store originally staged files from repo root
cd "$REPO_ROOT"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '^apps/frontend/' || true)
if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No frontend files staged${NC}"
    exit 0
fi

# Now move to app directory for running the tools
cd "$APP_DIR"

echo -e "${BLUE}üîß Running frontend pre-commit checks...${NC}"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  node_modules not found. Running npm install...${NC}"
    npm install
fi

# Run type checking
echo -e "${BLUE}‚Üí Running type checking...${NC}"
if npm run check; then
    echo -e "${GREEN}‚úì Type checking passed${NC}"
else
    echo -e "${RED}‚úó Type checking failed${NC}"
    exit 1
fi

# Run ESLint with auto-fix for safe fixes
echo -e "${BLUE}‚Üí Running ESLint with auto-fix...${NC}"
if npx eslint . --fix; then
    echo -e "${GREEN}‚úì ESLint fixes applied${NC}"
else
    # ESLint returns non-zero if there are unfixable errors
    echo -e "${YELLOW}‚ö†Ô∏è  ESLint found issues that couldn't be auto-fixed${NC}"
    # Run again without --fix to show the remaining errors
    npx eslint . || true
fi

# Run Prettier formatting (fixes issues in-place)
echo -e "${BLUE}‚Üí Running Prettier formatting...${NC}"
npm run format

# Final validation - check if there are any remaining issues
echo -e "${BLUE}‚Üí Final validation...${NC}"
if npm run lint; then
    echo -e "${GREEN}‚úì All linting checks passed${NC}"
else
    echo -e "${RED}‚úó There are still linting issues that couldn't be auto-fixed${NC}"
    exit 1
fi

# Re-stage only the files that were originally staged (from repo root)
if [ -n "$STAGED_FILES" ]; then
    cd "$REPO_ROOT"
    echo "$STAGED_FILES" | xargs -r git add
fi

echo -e "${GREEN}‚úÖ Frontend pre-commit checks completed successfully${NC}"